<% unless comment.archived? %>
    <div class="card">
        <div class="card-header">
            <%= comment.commenter %>
        </div>
        <div class="card-body">
            <div class="card-text"><%= comment.body %></div>
            </br>
            <p>
                <%= link_to "Delete Comment", [comment.article, comment], data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure?"
                            }, class:"btn btn-outline-danger btn-sm" %>
            </p>
        </div>
    </div>
<% end %>