<div class="mb-3">
    <%= form_with model: [ @article, @article.comments.build ] do |form| %>
        <p>
            <%= form.label :commenter, class:"form-label" %><br>
            <%= form.text_field :commenter, class:"form-control" %>
        </p>
        <p>
            <%= form.label :body, class:"form-label" %><br>
            <%= form.text_area :body, rows:"5", class:"form-control" %>
        </p>
        <p>
            <%= form.label :status, class:"form-label" %><br>
            <%= form.select :status, Visible::VALID_STATUSES, selected: "public" %>
            <%# form.select :status, Visible::VALID_STATUSES, {}, {class:"form-select"} %>
        </p>
        <p>
            <%= form.submit class:"btn btn-primary" %>
        </p>
    <% end %>
</div>